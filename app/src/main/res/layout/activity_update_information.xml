<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:label="@string/reset_password"
    tools:context="edu.uta.mavs.utaparkingenforcement.UpdateInformation">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Information"
        android:id="@+id/textView"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update User Information"
        android:id="@+id/radioButton_update_user"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginStart="33dp"
        android:layout_marginTop="39dp"
        android:checked="true"
        android:clickable="true"
        android:layout_gravity="center_horizontal"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Vehicle Information"
        android:id="@+id/radioButton_update_vehicle"
        android:layout_below="@+id/radioButton_update_user"
        android:layout_alignStart="@+id/radioButton_update_user"
        android:clickable="true"
        android:layout_gravity="center_horizontal"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Tow Service"
        android:id="@+id/radioButton_update_towService"
        android:layout_below="@+id/radioButton_update_vehicle"
        android:layout_alignStart="@+id/radioButton_update_vehicle"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
         />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Parking Type"
        android:id="@+id/radioButton_update_parkingType"
        android:layout_below="@+id/radioButton_update_towService"
        android:layout_alignStart="@+id/radioButton_update_towService"
        android:clickable="true"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/button_update_info"
        android:layout_marginTop="47dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/radioButton_update_parkingType"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
