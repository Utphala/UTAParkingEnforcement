<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.uta.mavs.utaparkingenforcement.LookupInfo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="LookUp Vehicle"
        android:id="@+id/textView_lookup_vehicle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_bar"
        android:queryHint ="Enter Vehicle Number Here!"
        android:layout_below="@+id/textView_lookup_vehicle"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: Utphala"
        android:textSize="20dp"
        android:id="@+id/textView3"
        android:paddingTop="20dp"
        android:layout_below="@+id/search_bar"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Licence Plate: AJY3486"
        android:textSize="20dp"
        android:id="@+id/textView4"
        android:paddingTop="20dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make: Honda Civic"
        android:textSize="20dp"
        android:id="@+id/textView5"
        android:paddingTop="20dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Model: 2012"
        android:textSize="20dp"
        android:id="@+id/textView6"
        android:paddingTop="20dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color: Black"
        android:textSize="20dp"
        android:id="@+id/textView7"
        android:paddingTop="20dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State: Texas"
        android:textSize="20dp"
        android:id="@+id/textView8"
        android:paddingTop="20dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Permit: Expired"
        android:textSize="20dp"
        android:id="@+id/textView9"
        android:paddingTop="20dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true" />




</RelativeLayout>
